{
  "name": "planning-poker-relay",
  "version": "1.0.0",
  "description": "Realtime relay for Jira Planning Poker sessions (Fastify + Socket.IO).",
  "main": "./dist/server.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup",
    "start": "node ./dist/server.js",
    "lint": "eslint \"{src,scripts}/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"{src,scripts}/**/*.{ts,tsx}\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "token:mint": "tsx scripts/mint-token.ts",
    "test": "npm run lint && npm run typecheck"
  },
  "keywords": [
    "socket.io",
    "fastify",
    "realtime",
    "planning-poker"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "jose": "^6.1.2",
    "socket.io": "^4.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
