{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "types": ["node"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "dist"]
}
